<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <!-- Driver JDBC para MySQL 8+ -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <!-- URL de conexión a MySQL -->
        <property name="connection.url">
            jdbc:mysql://localhost:3306/tutorial?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC
        </property>

        <!-- Usuario y contraseña -->
        <property name="connection.username">root</property>
        <property name="connection.password"></property>

        <!-- Dialect para MySQL 8 -->
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Mostrar SQL en consola -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Actualizar tablas automáticamente -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Clase entidad -->
        <mapping class="models.Usuario"/>
    </session-factory>
</hibernate-configuration>
